<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cherish Sachdeva</title>
    <link rel="stylesheet" href="./css/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/ae1f1fb8b4.js" crossorigin="anonymous"></script>
    <script src="./script.js"></script>
</head>
<body>
    <nav class="navbar">
        <div class="max-width">
            <div class="logo"><a href="#">Portfo<span>lio.</span></a></div>
            <ul class="menu">
                <li><a href="#home" class="menu-btn">Home</a></li>
                <li><a href="#about" class="menu-btn">About</a></li>
                <li><a href="#projects" class="menu-btn">Projects</a></li>
                <li><a href="#skills" class="menu-btn">Skills</a></li>
                <li><a href="#contact" class="menu-btn">Contact</a></li>
            </ul>
            <div class="menu-btn">
                <i class="fas fa-bars"> </i>
            </div>
        </div>
    </nav>

    <!-- home section starts -->

    <section class="home" id="home">
        <div class="max-width">
            <div class="home-content">
                <div class="text-1">Hello, my name is</div>
                <div class="text-2"><%= clientName %></div>
                <div class="text-3">And I'm a <%= clientDeveloper %></div>
                <a href="<%= clientResume %>" target="_blank">Resume</a>
            </div>
        </div>
    </section>

    <!-- about section starts -->

    <section class="about" id="about">
        <div class="max-width">
            <h2 class="title">About Me</h2>
            <div class="about-content">
                <div class="column left">
                    <!-- <img src="./css/images/twitter_header.jpg" alt="profile-pic" alt="profile-pic"> -->
                    <img src="<%= clientImage %>" alt="profile-pic" alt="profile-pic">
                </div>
                <div class="cloumn right">
                    <div class="text"><p>Hello! I'm <%= clientName %>,</p><p><span><%= clientDeveloper %></span></p> From <%= clientCountry %></div>
                    <p><%= clientInfo %></p>
                    <a href="<%= clientResume %>" target="_blank">Resume</a>
                </div>
            </div>
        </div>
    </section>
    <script src="script.js"></script>

    <!-- project section starts -->

    <section class="projects" id="projects">
        <div class="max-width">
            <h2 class="title">Projects</h2>
            <div class="projects-content">
                <div class="card">
                    <div class="box">
                        <img src="<%= clientProjectImg1 %>">
                        <div class="text"><%= clientProjectTitle1 %></div>
                        <p><%=clientProject1%></p>
                    </div>
                </div>
                <div class="card">
                    <div class="box">
                        <img src="<%= clientProjectImg2 %>">
                        <div class="text"><%= clientProjectTitle2 %></div>
                        <p><%=clientProject2%></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Skills section starts -->

    <section class="skills" id="skills">
        <div class="max-width">
            <h2 class="title">Skills</h2>
            <div class="skills-content">
                <div class="card">
                    <div class="box">
                        <!-- <img src="./css/images/html.png"> -->
                        <div class="text"><%= clientSkill1 %></div>
                    </div>
                    <div class="box">
                        <!-- <img src="./css/images/css.png"> -->
                        <div class="text"><%= clientSkill2 %></div>
                    </div>
                    <div class="box">
                        <!-- <img src="./css/images/javascript.png"> -->
                        <div class="text"><%= clientSkill3 %></div>
                    </div>
                    <div class="box">
                        <!-- <img src="./css/images/react.png"> -->
                        <div class="text"><%= clientSkill4 %></div>
                    </div>            
                </div>
            </div>
        </div>
    </section>

    <!-- contact section starts -->

    <section class="contact" id="contact">
        <div class="max-width">
            <h2 class="title">Contact me</h2>
            <div class="contact-content">
                <div class="column right">
                    <div class="text">Message me</div>
                    <form action="#">
                        <div class="fields">
                            <div class="field name">
                                <input type="text" placeholder="Name" required>
                            </div>
                            <div class="field email">
                                <input type="email" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="field">
                            <input type="text" placeholder="Subject" required>
                        </div>
                        <div class="field textarea">
                            <textarea cols="30" rows="10" placeholder="Message.." required></textarea>
                        </div>
                        <div class="button area">
                            <button type="submit">Send message</button>
                        </div>
                    </form>
                </div>
                <div class="column left">
                    <div class="text">Get in Touch</div>
                    <p><%= clientCallInfo %></p>
                    <div class="icons">
                        <div class="row">
                            <i class="fas fa-user"></i>
                            <div class="info">
                                <div class="head">Name</div>
                                <div class="sub-title"><%= clientName %></div>
                            </div>
                        </div>
                        <div class="row">
                            <i class="fas fa-map-marker-alt"></i>
                            <div class="info">
                                <div class="head">Address</div>
                                <div class="sub-title"><%= clientAddress %></div>
                            </div>
                        </div>
                        <div class="row">
                            <i class="fas fa-envelope"></i>
                            <div class="info">
                                <div class="head">Email</div>
                                <div class="sub-title"><%= clientEmail %></div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </section>

    <!-- footer section starts -->
    <footer>
        <div class="footer-content">
            <div class="footer-icons">
                <a href="<%= clientLinkedin %>" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                <a href="<%= clientGithub %>" target="_blank"><i class="fab fa-github"></i></a>
                <a href="<%= clientResume %>" target="_blank"><i class="far fa-file"></i></a>
            </div>
            <p>Copyright - 2021 <span><%= clientName %></span> , All Right Reserved</p>
        </div>
        <div class="footer-download">
            <form action="/download">
                <button type="submit" class="divbutton" value="download">Download</button>
            </form>
        </div>
    </footer>
</body>
</html>